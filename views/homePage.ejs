<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify Controller</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/ico/favicon.ico" type="image/x-icon">
</head>

<body>
    <div id="notification" class="notification">
        <span class="close-btn" onclick="closeNotification()">&times;</span>
        <p id="notification-text"></p>
    </div>
    <div id="searchContainer">
        <div id="search content">
            <form onsubmit="search(event); return false;">
                <div class="searchbar">
                    <input type="text" id="searchBar" placeholder="Search for a song">
                    <button type="submit" class="searchButton">Search</button>
                </div>
            </form>
            <div id="searchResults"></div>
        </div>
    </div>
    <div id="playbackContainer">
        <div id="currentSong"></div>
        <br>
        <div id="playbackControls">
            <button onclick="shuffle()" class="playback">⇄</button>
            <button onclick="previousSong()" class="playback">⏮</button>
            <button class="playback" id="playPauseButton" onclick="togglePlayPause()">Loading...</button>
            <button onclick="skipSong()" class="playback">⏭</button>
        </div>
        <br>
        <div id="progressContainer" onclick="seek(event)">
            <div id="progressBar"></div>
            <br>
            <div id="playbackTime">
                <span id="currentTime">0:00</span>
                <span id="totalTime">0:00</span>
            </div>
        </div>
        <br>
        <div id="stats">
            <a href="/stats">See your stats</a>
        </div>
    </div>
</body>
<script src="js/main.js"></script>

</html>